generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GroupFrequency {
  WEEKLY
  MONTHLY
}

enum GroupStatus {
  ACTIVE
  ARCHIVED
}

enum MemberRole {
  ADMIN
  MEMBER
}

enum MemberStatus {
  INVITED
  ACTIVE
  LEFT
  REMOVED
}

enum CycleStatus {
  OPEN
  CLOSED
}

enum PayoutMode {
  RANDOM_DRAW
}

enum AuctionStatus {
  NONE
  OPEN
  CLOSED
}

enum ContributionStatus {
  PENDING
  SUBMITTED
  CONFIRMED
  REJECTED
}

enum PayoutStatus {
  PENDING
  CONFIRMED
}

enum Platform {
  IOS
  ANDROID
  WEB
}

enum NotificationType {
  MEMBER_JOINED
  CONTRIBUTION_SUBMITTED
  CONTRIBUTION_CONFIRMED
  CONTRIBUTION_REJECTED
  PAYOUT_CONFIRMED
  DUE_REMINDER
}

enum NotificationStatus {
  UNREAD
  READ
}

model User {
  id             String         @id @default(cuid())
  phone          String         @unique
  firstName      String?
  middleName     String?
  lastName       String?
  fullName       String?
  createdAt      DateTime       @default(now())
  refreshTokens  RefreshToken[]
  auditLogs      AuditLog[]
  createdGroups  EqubGroup[]    @relation("GroupCreator")
  memberships    EqubMember[]
  createdInvites InviteCode[]   @relation("InviteCreator")
  scheduledPayoutCycles EqubCycle[] @relation("CycleScheduledPayoutUser")
  finalPayoutCycles EqubCycle[] @relation("CycleFinalPayoutUser")
  winningBidCycles EqubCycle[] @relation("CycleWinningBidUser")
  createdCycles  EqubCycle[]    @relation("CycleCreator")
  startedRounds  EqubRound[]    @relation("RoundStarter")
  payoutSchedules PayoutSchedule[] @relation("ScheduleUser")
  openedAuctions CycleAuction[] @relation("AuctionOpener")
  cycleBids      CycleBid[]
  contributions  Contribution[] @relation("ContributionUser")
  confirmedContributions Contribution[] @relation("ContributionConfirmedBy")
  rejectedContributions Contribution[] @relation("ContributionRejectedBy")
  payoutRecipients Payout[] @relation("PayoutRecipient")
  createdPayouts Payout[] @relation("PayoutCreatedBy")
  confirmedPayouts Payout[] @relation("PayoutConfirmedBy")
  closedCycles EqubCycle[] @relation("CycleClosedBy")
  deviceTokens      DeviceToken[]
  notifications     Notification[]
}

model OtpCode {
  id        String   @id @default(cuid())
  phone     String
  codeHash  String
  expiresAt DateTime
  attempts  Int      @default(0)
  createdAt DateTime @default(now())

  @@index([phone, createdAt(sort: Desc)])
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model EqubGroup {
  id                 String         @id @default(uuid())
  name               String
  currency           String         @default("ETB")
  contributionAmount Int
  frequency          GroupFrequency
  startDate          DateTime       @db.Date
  status             GroupStatus    @default(ACTIVE)
  strictPayout       Boolean        @default(false)
  timezone           String         @default("Africa/Addis_Ababa")
  createdByUserId    String
  createdAt          DateTime       @default(now())
  createdByUser      User           @relation("GroupCreator", fields: [createdByUserId], references: [id], onDelete: Restrict)
  members            EqubMember[]
  inviteCodes        InviteCode[]
  auditLogs          AuditLog[]
  cycles             EqubCycle[]
  contributions      Contribution[]
  payouts            Payout[]
  rounds             EqubRound[]
  notifications      Notification[]

  @@index([createdByUserId])
}

model EqubMember {
  id             String       @id @default(uuid())
  groupId        String
  userId         String
  role           MemberRole   @default(MEMBER)
  status         MemberStatus @default(INVITED)
  payoutPosition Int?
  joinedAt       DateTime?
  createdAt      DateTime     @default(now())
  group          EqubGroup    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
  @@index([userId])
  @@index([groupId, status, role])
}

model EqubRound {
  id              String      @id @default(uuid())
  groupId         String
  roundNo         Int
  payoutMode      PayoutMode  @default(RANDOM_DRAW)
  startedByUserId String
  startedAt       DateTime    @default(now())
  closedAt        DateTime?
  group           EqubGroup   @relation(fields: [groupId], references: [id], onDelete: Cascade)
  startedByUser   User        @relation("RoundStarter", fields: [startedByUserId], references: [id], onDelete: Restrict)
  schedules       PayoutSchedule[]
  cycles          EqubCycle[]

  @@unique([groupId, roundNo])
  @@index([groupId, closedAt])
}

model PayoutSchedule {
  roundId   String
  position  Int
  userId    String
  round     EqubRound @relation(fields: [roundId], references: [id], onDelete: Cascade)
  user      User      @relation("ScheduleUser", fields: [userId], references: [id], onDelete: Restrict)

  @@id([roundId, position])
  @@unique([roundId, userId])
  @@index([userId])
}

model InviteCode {
  id              String    @id @default(uuid())
  groupId         String
  code            String    @unique
  createdByUserId String
  expiresAt       DateTime?
  maxUses         Int?
  usedCount       Int       @default(0)
  isRevoked       Boolean   @default(false)
  createdAt       DateTime  @default(now())
  group           EqubGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  createdByUser   User      @relation("InviteCreator", fields: [createdByUserId], references: [id], onDelete: Cascade)

  @@index([groupId])
}

model EqubCycle {
  id              String      @id @default(uuid())
  groupId         String
  roundId         String
  cycleNo         Int
  dueDate         DateTime    @db.Date
  scheduledPayoutUserId String
  finalPayoutUserId String
  auctionStatus AuctionStatus @default(NONE)
  winningBidAmount Int?
  winningBidUserId String?
  status          CycleStatus @default(OPEN)
  contributionsConfirmedCount Int @default(0)
  contributionsSubmittedCount Int @default(0)
  closedAt         DateTime?
  closedByUserId   String?
  createdByUserId String
  createdAt       DateTime    @default(now())
  group           EqubGroup   @relation(fields: [groupId], references: [id], onDelete: Cascade)
  round           EqubRound   @relation(fields: [roundId], references: [id], onDelete: Restrict)
  scheduledPayoutUser User @relation("CycleScheduledPayoutUser", fields: [scheduledPayoutUserId], references: [id], onDelete: Restrict)
  finalPayoutUser User @relation("CycleFinalPayoutUser", fields: [finalPayoutUserId], references: [id], onDelete: Restrict)
  winningBidUser User? @relation("CycleWinningBidUser", fields: [winningBidUserId], references: [id], onDelete: SetNull)
  closedByUser    User?       @relation("CycleClosedBy", fields: [closedByUserId], references: [id], onDelete: SetNull)
  createdByUser   User        @relation("CycleCreator", fields: [createdByUserId], references: [id], onDelete: Restrict)
  contributions   Contribution[]
  payout          Payout?
  auction         CycleAuction?
  bids            CycleBid[]

  @@unique([roundId, cycleNo])
  @@index([groupId, status])
  @@index([groupId, roundId])
}

model CycleAuction {
  id             String        @id @default(uuid())
  cycleId        String        @unique
  openedByUserId String
  status         AuctionStatus
  openedAt       DateTime      @default(now())
  closedAt       DateTime?
  cycle          EqubCycle     @relation(fields: [cycleId], references: [id], onDelete: Cascade)
  openedByUser   User          @relation("AuctionOpener", fields: [openedByUserId], references: [id], onDelete: Restrict)

  @@index([status, openedAt])
}

model CycleBid {
  id        String    @id @default(uuid())
  cycleId   String
  userId    String
  amount    Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  cycle     EqubCycle @relation(fields: [cycleId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([cycleId, userId])
  @@index([cycleId, amount, createdAt])
  @@index([userId])
}

model Contribution {
  id                String             @id @default(uuid())
  groupId           String
  cycleId           String
  userId            String
  amount            Int
  status            ContributionStatus @default(PENDING)
  proofFileKey      String?
  paymentRef        String?
  note              String?
  submittedAt       DateTime?
  confirmedByUserId String?
  confirmedAt       DateTime?
  rejectedByUserId  String?
  rejectedAt        DateTime?
  rejectReason      String?
  createdAt         DateTime           @default(now())
  group             EqubGroup          @relation(fields: [groupId], references: [id], onDelete: Cascade)
  cycle             EqubCycle          @relation(fields: [cycleId], references: [id], onDelete: Cascade)
  user              User               @relation("ContributionUser", fields: [userId], references: [id], onDelete: Cascade)
  confirmedByUser   User?              @relation("ContributionConfirmedBy", fields: [confirmedByUserId], references: [id], onDelete: SetNull)
  rejectedByUser    User?              @relation("ContributionRejectedBy", fields: [rejectedByUserId], references: [id], onDelete: SetNull)

  @@unique([cycleId, userId])
  @@index([groupId, cycleId])
}

model Payout {
  id                String      @id @default(uuid())
  groupId           String
  cycleId           String      @unique
  toUserId          String
  amount            Int
  status            PayoutStatus @default(PENDING)
  proofFileKey      String?
  paymentRef        String?
  note              String?
  metadata          Json?
  createdByUserId   String
  createdAt         DateTime    @default(now())
  confirmedByUserId String?
  confirmedAt       DateTime?
  group             EqubGroup   @relation(fields: [groupId], references: [id], onDelete: Cascade)
  cycle             EqubCycle   @relation(fields: [cycleId], references: [id], onDelete: Cascade)
  toUser            User        @relation("PayoutRecipient", fields: [toUserId], references: [id], onDelete: Restrict)
  createdByUser     User        @relation("PayoutCreatedBy", fields: [createdByUserId], references: [id], onDelete: Restrict)
  confirmedByUser   User?       @relation("PayoutConfirmedBy", fields: [confirmedByUserId], references: [id], onDelete: SetNull)

  @@index([groupId, cycleId])
}

model AuditLog {
  id          String     @id @default(cuid())
  groupId     String?
  action      String
  actorUserId String?
  metadata    Json?
  createdAt   DateTime   @default(now())
  actorUser   User?      @relation(fields: [actorUserId], references: [id], onDelete: SetNull)
  group       EqubGroup? @relation(fields: [groupId], references: [id], onDelete: SetNull)

  @@index([groupId])
  @@index([actorUserId])
  @@index([action, createdAt(sort: Desc)])
}

model DeviceToken {
  id         String   @id @default(uuid())
  userId     String
  token      String
  platform   Platform
  isActive   Boolean  @default(true)
  lastSeenAt DateTime
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, token])
  @@index([userId, isActive])
}

model Notification {
  id        String             @id @default(uuid())
  userId    String
  groupId   String?
  type      NotificationType
  title     String
  body      String
  dataJson  Json?
  status    NotificationStatus @default(UNREAD)
  createdAt DateTime           @default(now())
  readAt    DateTime?
  user      User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  group     EqubGroup?         @relation(fields: [groupId], references: [id], onDelete: SetNull)

  @@index([userId, status, createdAt(sort: Desc)])
}
